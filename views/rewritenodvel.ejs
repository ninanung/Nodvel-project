<% include _header %>

<h1>Basic information change</h1>
<hr>
<p>Writer : <%= contents.writer %></p>
<form action="/writenodvel/rewrite/<%= contents.title %>" method="post">
	<h4>Title</h4>
	<input name="title" type="taxt" class="form-control" value="<%= contents.title %>" required>
	<br>
	<h4>Preview of story</h4>
	<input name="story" type="text" class="form-control" value="<%= contents.story %>" required>
	<br>
	<h4>Select main genre</h4>
	<select name="genre" class="selectpicker" style="width: 400px; height: 40px; line-height: 40px;" required>
		<option value="Romance">Romance</option>
		<option value="Horror">Horror</option>
		<option value="SF">SF</option>
		<option value="Fantasy">Fantasy</option>
		<option value="Historical">Historical</option>
		<option value="Thriller">Thriller</option>
		<option value="General">General</option>
	</select>
	<br>
	<br>
    <input type="submit" value="Next" class="btn btn-primary pull-right">
	<a href="/nodvel/<%= contents.title %>" class="btn btn-info pull-left">Cancel</a>
</form>

<% include _footer %>
