<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Nodvel</title>
	<script src="https://code.jquery.com/jquery-1.11.1.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M" crossorigin="anonymous">
</head>
<body>
    <div class="navbar navbar-default navbar-static-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="/" style="font-size: xx-large; color: crimson;">Nodvel</a>
            </div>
            <ul class="nav navbar-nav navbar-right">
                <% if (currentUser) { %>
                <li><a href="/">Hello, <%= currentUser.username %></a></li>
                <li><a href="/logout">Log out</a></li>
                <% } else { %>
                <li><a href="/login">Log in</a></li>
                <li><a href="/signup">Sign up</a></li>
                <% } %>
            </ul>
        </div>
    </div>
    <br>
    <div class="container">
        <% if(currentUser) { %>
            <div>
                <table>
                    <tr>
                        <th style="width: 183px; text-align: center;"><a href="/">Nodvel list</a></th>
                        <th style="width: 183px; text-align: center;"><a href="/topten">Most liked Nodvel</a></th>
                        <th style="width: 183px; text-align: center;"><a href="/search">Search Nodvel</a></th>
                        <th style="width: 183px; text-align: center;"><a href="/like">My favorits</a></th>
                        <th style="width: 183px; text-align: center;"><a href="/mynodvel">My Nodvel</a></th>
                        <th style="width: 183px; text-align: center;"><a href="/help">Manual</a></th>
                    </tr>
                <table>
            </div>
            <br>
            <br>
        <% } %>
        <% errors.forEach(function(error) { %>
        <div class="alert alert-danger" role="alert">
            <%= error %>
        </div>
        <% }) %>

        <% infos.forEach(function(info) { %>
        <div class="alert alert-info" role="alert">
            <%= info %>
        </div>
        <% }) %>
